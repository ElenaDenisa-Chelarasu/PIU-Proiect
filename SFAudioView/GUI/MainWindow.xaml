<Window x:Class="SFAudio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SFAudio"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File" 
                      Click="MenuItem_Click">
                <MenuItem Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save as"/>
                <MenuItem Header="Export"/>
                <!-- TODO Add more things -->
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
                <!-- TODO Add more things -->
            </MenuItem>
            <MenuItem Header="View">
                <!-- TODO Add more things -->
            </MenuItem>
            <MenuItem Header="Tracks">
                <!-- TODO Add more things -->
            </MenuItem>
            <MenuItem Header="Effects">
                <!-- TODO Add more things -->
            </MenuItem>
            <MenuItem Header="Generate">
                <MenuItem Header="Silence"/>
                <MenuItem Header="White noise"/>
                <MenuItem Header="Wave"/>
                <!-- TODO Add more things -->
            </MenuItem>
            <MenuItem Header="Tools">
                <!-- TODO Add more things -->
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Open Help Page"/>
                <MenuItem Header="About"/>
                <!-- TODO Add more things -->
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock> Playing...</TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock> Skip (LMB) - Jump 5 seconds ahead</TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock> 44100 Hz</TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock> CPU 2% RAM 1238 MB</TextBlock>
            </StatusBarItem>
        </StatusBar>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button>
                    <Image Height="25" Source="{StaticResource PlayButton}"/>
                </Button>
                <Button>
                    <Image Height="25" Source="{StaticResource PauseButton}"/>
                </Button>
                <Button>
                    <Image Height="25" Source="{StaticResource StopButton}"/>
                </Button>
                <Button>
                    <Image Height="25" Source="{StaticResource SkipLeftButton}"/>
                </Button>
                <Button>
                    <Image Height="25" Source="{StaticResource SkipRightButton}"/>
                </Button>
                <Button>
                    <Image Height="25" Source="{StaticResource LoopButton}"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>
