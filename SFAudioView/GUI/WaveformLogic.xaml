<UserControl x:Class="SFAudioView.GUI.WaveformLogic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFAudioView.GUI"
             Foreground="Black"
             MinWidth="50"
             MinHeight="20"
             Background="White"
             SizeChanged="UserControl_SizeChanged"
             MouseDown="UserControl_MouseDown"
             MouseUp="UserControl_MouseUp"
             MouseMove="UserControl_MouseMove">
    <Canvas x:Name="MainCanvas">
        <Polygon x:Name="SelectionPolygon" Fill="#32FFFF00" Stroke="#B0FF0000" StrokeThickness="1"/>
        <Polygon x:Name="WaveformPolygon" Fill="Blue"/>
        <Polygon x:Name="PlayPositionPolygon" Fill="Black"/>
    </Canvas>
</UserControl>
