<UserControl x:Class="SFAudioView.GUI.AudioTrack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFAudioView.GUI"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Background="White" Orientation="Horizontal">
        <StackPanel MinWidth="180">
            <DockPanel HorizontalAlignment="Stretch">
                <Button>
                    <Image Height="25" Source="{StaticResource DropDownButton}"></Image>
                </Button>
                <TextBox FontSize="25">wind01</TextBox>
            </DockPanel>
            <DockPanel HorizontalAlignment="Stretch" >
                <TextBox Width="60" DockPanel.Dock="Left">Left:</TextBox>
                <TextBox Width="50">50%</TextBox>
                <Button DockPanel.Dock="Right">Mute</Button>
            </DockPanel>
            <DockPanel HorizontalAlignment="Stretch">
                <TextBox Width="60">Right:</TextBox>
                <TextBox Width="50">50%</TextBox>
                <Button DockPanel.Dock="Right">Mute</Button>
            </DockPanel>
        </StackPanel>
        <DockPanel MinWidth="200">
            <!-- TODO Add audio track control -->
        </DockPanel>
    </StackPanel>
</UserControl>
