<UserControl x:Class="SFAudioView.GUI.AudioTrack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:g="clr-namespace:SFAudioView.GUI"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <g:AudioTrackVM/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <StackPanel Background="White" Orientation="Horizontal" Margin="10">
        <StackPanel MinWidth="180">
            <DockPanel HorizontalAlignment="Stretch">
                <Button>
                    <Image Height="25" Source="{StaticResource DropDownButton}"></Image>
                </Button>
                <TextBlock FontSize="25" Text="{Binding TrackName}"/>
            </DockPanel>
            <DockPanel HorizontalAlignment="Stretch" >
                <TextBlock Width="60" DockPanel.Dock="Left">Left:</TextBlock>
                <TextBlock Width="50">50%</TextBlock>
                <Button DockPanel.Dock="Right">Mute</Button>
            </DockPanel>
            <DockPanel HorizontalAlignment="Stretch">
                <TextBlock Width="60">Right:</TextBlock>
                <TextBlock Width="50">50%</TextBlock>
                <Button DockPanel.Dock="Right">Mute</Button>
            </DockPanel>
        </StackPanel>
        <ItemsControl Name="WaveformItems" MinWidth="200">
            <!--<ItemsControl.ItemTemplate>
                <DataTemplate>
                    <g:WaveformLogic Margin="5" Height="50" BorderBrush="Black" BorderThickness="1"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>-->
        </ItemsControl>
    </StackPanel>
</UserControl>
