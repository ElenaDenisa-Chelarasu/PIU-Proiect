<UserControl x:Class="SFAudioView.GUI.PlayIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SFAudioView.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Name="PlayIndicatorCanvas" Grid.Column="1">
        <Polygon Name="PlayPositionPoly" Stroke="#80000000" StrokeThickness="1"/>
        <Polygon Name="PlayAreaPoly" Stroke="#80000000" StrokeThickness="1"/>
    </Canvas>
</UserControl>
